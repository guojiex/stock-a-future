# Docker 环境变量配置文件
# 用于 Stock-A-Future Docker 部署

# ===========================================
# 数据源配置
# ===========================================
DATA_SOURCE_TYPE=aktools
AKTOOLS_BASE_URL=http://aktools:8080

# ===========================================
# 服务器配置
# ===========================================
SERVER_PORT=8081
SERVER_HOST=0.0.0.0

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=both
LOG_FILENAME=logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30
LOG_COMPRESS=true
LOG_CONSOLE_FORMAT=color
LOG_SHOW_CALLER=true
LOG_SHOW_TIME=true

# ===========================================
# 缓存配置
# ===========================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=1h
CACHE_MAX_AGE=24h
CACHE_CLEANUP_INTERVAL=10m

# ===========================================
# 模式预测配置
# ===========================================
PATTERN_PREDICTION_DAYS=14

# ===========================================
# 数据清理配置
# ===========================================
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=24h
CLEANUP_RETENTION_DAYS=30

# ===========================================
# Docker 特定配置
# ===========================================
# 容器内时区设置
TZ=Asia/Shanghai

# Python 配置（用于 AKTools）
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
