{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "启动 Go API 服务器 (端口8081)",
            "type": "shell",
            "command": "SERVER_PORT=8081 go run cmd/server/main.go",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "启动Go API服务器在8081端口"
        },
        {
            "label": "启动 AKTools 服务 (端口8080)",
            "type": "shell",
            "command": "python3 -m aktools --port 8080",
