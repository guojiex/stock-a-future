            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "启动AKTools数据服务在8080端口"
        },
        {
            "label": "启动 React Web (开发模式)",
            "type": "shell",
            "command": "npm",
