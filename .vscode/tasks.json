{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "启动 Stock-A-Future 服务器",
            "type": "shell",
            "command": "go",
            "args": ["run", "cmd/server/main.go"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "启动Go API服务器"
        },
        {
            "label": "启动 AKTools 服务 (指定端口)",
            "type": "shell",
            "command": "python",
            "args": ["-m", "aktools", "--port", "8080"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "在指定端口8080启动AKTools服务"
        }
    ]
}
