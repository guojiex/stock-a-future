# Stock-A-Future 环境变量配置示例

# 数据源配置
# 可选值: tushare, aktools
DATA_SOURCE_TYPE=aktools

# Tushare API配置 (当DATA_SOURCE_TYPE=tushare时必需)
TUSHARE_TOKEN=your_tushare_token_here
TUSHARE_BASE_URL=http://api.tushare.pro

# AKTools配置 (当DATA_SOURCE_TYPE=aktools时使用)
# AKTools默认运行在本地8080端口，可以通过以下命令启动：
# python -m aktools
AKTOOLS_BASE_URL=http://127.0.0.1:8080

# 服务器配置
SERVER_PORT=8080
SERVER_HOST=localhost

# 日志级别
LOG_LEVEL=info

# 缓存配置
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=1h
CACHE_MAX_AGE=24h
CACHE_CLEANUP_INTERVAL=10m

# 模式预测配置
PATTERN_PREDICTION_DAYS=14

# 数据清理配置
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=24h
CLEANUP_RETENTION_DAYS=90
